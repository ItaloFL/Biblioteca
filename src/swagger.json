{

  "openapi": "3.0.0",
  "info": {
    "title": "Biblioteca-api Documentation",
    "description": "Api library",
    "version": "1.0.0",
    "contact": {
      "name": "Italo Ferreira Lopes",
      "email": "italo.dev@gmail.com"
    }
  }
,

  "paths": {
    "/obras": {
      "post":{
        "tags": ["Obras"],
        "summary": "Criação de uma obra",
        "description": "Cria uma nova obra",
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "titulo":{
                    "type": "string"
                  },
                  "foto":{
                    "type": "string"
                  },
                  "editora":{
                    "type": "string"
                  },
                  "autores":{
                    "type": "string"
                  }
                },
                "example":{
                  "titulo": "Harry Potter",
                  "foto": "https://i.imgur.com/UH3IPXw.jpg",
                  "editora": "Rocco",
                  "autores":[
                    "JK Rowlling",
                    "Italo Ferreira"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Obra criada com sucesso!"
          },
          "400": {
            "description": "O Livro já existe, verifique novamente seu titulo!"
          }
        }
      },
      "get":{
        "tags": ["Obras"],
        "summary": "Listar obras",
        "description": "Listagem de obras",
        "responses": {
          "200":{
            "description": "Listagem feita",
            "content": {
              "application/json":{
                "schema": {
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties": {
                      "titulo":{
                        "type": "string"
                      },
                      "foto":{
                        "type": "string"
                      },
                      "editora":{
                        "type": "string"
                      },
                      "autores":{
                        "type": "string"
                      }
                    },
                    "example":{
                      "value": {
                        "titulo": "Harry Potter",
                        "foto": "https://i.imgur.com/UH3IPXw.jpg",
                        "editora": "Rocco",
                        "autores":[
                          "JK Rowlling",
                          "Italo Ferreira"
                        ]
                      }
                      
                    }
                  }
                }
              }
            } 
          }
        }
      }
    },
    "/obras/id":{
      "put":{
        "tags": ["Obras"],
        "summary": "Altera informações de uma obra especifica",
        "description": "Altera uma obra especifica"
      },
      "delete":{
        "tags": ["Obras"],
        "summary": "Deleta uma obra especifica",
        "description": "Deletar uma obra espeficia"

      }
      
    }
  }



}